[Unit]
Description=HSF Kiosk Backend API
After=network.target

[Service]
Type=simple
User=nginx
WorkingDirectory=/opt/hsf-kiosk
Environment=NODE_ENV=production
# Optional: point to your backend .env
# EnvironmentFile=/opt/hsf-kiosk/.env
ExecStart=/usr/bin/node src/server.js
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
